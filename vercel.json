{
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/api/query",
      "destination": "/api/index?route=query"
    },
    {
      "source": "/api/batch",
      "destination": "/api/index?route=batch"
    },
    {
      "source": "/api/network-info",
      "destination": "/api/index?route=network-info"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
